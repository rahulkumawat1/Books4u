<!--Section: Block Content-->
<main>

  <div class="container-fluid">
    <!--Grid row-->
    <div class="row">
    
      <!--Grid column-->
      <div class="col-lg-8">
    
        <!-- Card -->
        <div class="card wish-list mb-3">
          <div class="card-body">
    
            <h5 class="mb-4">Cart (<span>
                <%= products.length %>
              </span> items)</h5>
    
    
            <% if (products && products.length> 0) { %>
              <% for( let i=0; i < products.length; i++ ) { %>
                <%- include('../includes/cart-product.ejs', {product: products[i]}) %>
                  <% if (i !=products.length-1) { %>
                    <hr class="mb-4">
                    <% } %>
                      <% } %>
                        <% } else { %>
                          <h1>No Products</h1>
                          <% } %>
    
    
          </div>
        </div>
        <!-- Card -->
    
        <!-- Card -->
        <!-- <div class="card mb-3">
            <div class="card-body">
    
              <h5 class="mb-4">Expected shipping delivery</h5>
    
              <p class="mb-0"> <%= new Date().toISOString().slice(0, 10) %> .</p>
            </div>
          </div> -->
        <!-- Card -->
    
      </div>
      <!--Grid column-->
    
      <!--Grid column-->
      <div class="col-lg-4">
    
        <!-- Card -->
        <div class="card mb-3">
          <div class="card-body">
    
            <h5 class="mb-3">The total amount of</h5>
    
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Temporary amount
                <span>Rs. <%= TtlPrice %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Shipping
                <span>Rs. 0</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>The total amount of</strong>
                  <strong>
                    <p class="mb-0">(including VAT)</p>
                  </strong>
                </div>
                <span><strong>Rs. <%= TtlPrice %></strong></span>
              </li>
            </ul>
            <% if (TtlPrice !=0) { %>
              <a href="/buy" class="btn btn-primary" %> >Checkout</a>
              <% } %>
    
          </div>
        </div>
        <!-- Card -->
    
    
      </div>
      <!--Grid column-->
    
    </div>
    <!--Grid row-->
  </div>

</main>
